<p style="color: green"><%= notice %></p>

<h1>Industries</h1>

<%= link_to "New industry", new_has_and_belongs_to_many_industry_path %>


<div id="industries">

  <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Industry Name</th>
          <th scope="col">Email</th>
          <th scope="col">Registration Number</th>
          <th scope="col">Total Sectors</th>
          <th scope="col">Action</th>
          
        </tr>
      </thead>
      <tbody>
      <% @industries.each do |industry| %>
        <%= render "industry", industry: industry, show: "true"%>
      <% end%>
      </tbody>
  </table>
</div>